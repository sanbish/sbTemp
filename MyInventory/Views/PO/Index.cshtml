@model IEnumerable<MyInventory.Models.PO_Header>
@using System.Globalization
@{
    ViewBag.Title = "Purchasing";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-icon" data-background-color="purple">
                <i class="material-icons">content_paste</i>
            </div>
            <div class="card-content">
                <h4 class="card-title">Purchase Orders List</h4>
                <a href="/po/create" class="navbar-right" style="margin-top:-40px;">
                    <i class="material-icons">add</i>
                    Add New Record
                </a>
                @*<div class="toolbar">

            </div>*@
                <div class="material-datatables">
                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                        <thead class="text-rose text-dark">
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    PO Number
                                </th>
                                <th>
                                    Supplier
                                </th>
                                <th>
                                    PO Date
                                </th>
                                <th class="text-right">
                                    Total Amount
                                </th>
                                <th class="disabled-sorting text-right">Actions</th>
                            </tr>
                        </thead>
                        <tfoot class="text-rose text-dark">
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    PO Number
                                </th>
                                <th>
                                    Supplier
                                </th>
                                <th>
                                    PO Date
                                </th>
                                <th class="text-right">
                                    Total Amount
                                </th>
                                <th class="text-right">Actions</th>
                            </tr>
                        </tfoot>
                        <tbody>

                            @foreach (var item in Model)
        {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PO_ID)
                        </td>
                        <td>
                            <a rel="tooltip" title="View Details" href="/po/details/@item.PO_ID">
                                @item.PO_Number
                            </a>

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Supplier)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td class="text-right">
                            @item.PO_Detail.Sum(s => s.Qty * s.Unit_Price).ToString("C")
                            @*@string.Format(new CultureInfo("hi-IN"), "{0:c}", item.PO_Detail.Sum(s => s.Qty * s.Unit_Price))*@
                        </td>
                        <td class="td-actions text-right">
                            <a rel="tooltip" title="Edit Details" class="btn btn-primary btn-simple btn-xs" href="/po/edit/@item.PO_ID">
                                <i class="material-icons">edit</i>
                            </a>
                            <a rel="tooltip" title="Delete Record" class="btn btn-danger btn-simple btn-xs" href="/po/delete/@item.PO_ID">
                                <i class="material-icons">close</i>
                            </a>

                        </td>
                    </tr>
}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


