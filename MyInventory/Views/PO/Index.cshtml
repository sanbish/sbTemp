@model IEnumerable<MyInventory.Data.PO_Header>
@using System.Globalization
@{
    ViewBag.Title = "Purchasing";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-tabs card-header-primary">
                <div class="nav-tabs-navigation">
                    <div class="nav-tabs-wrapper">
                        <span class="nav-tabs-title"><b>PO List</b></span>
                        <ul class="nav nav-tabs justify-content-end" data-tabs="tabs">
                            <li class="nav-item">
                                <form class="navbar-form">
                                    <div class="input-group no-border">
                                        <input type="text" value="" style="color:white" class="form-control" placeholder="Search...">
                                        <button type="submit" class="btn btn-white btn-round btn-just-icon">
                                            <i class="material-icons">search</i>
                                            <div class="ripple-container"></div>
                                        </button>
                                    </div>
                                </form>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active show" href="/po/create" style="margin-left:20px;">
                                    <i class="material-icons">add</i>
                                    Add New
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class=" text-primary Quote">
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    PO Number
                                </th>
                                <th>
                                    Supplier
                                </th>
                                <th>
                                    PO Date
                                </th>
                                <th class="text-right">
                                    Total Amount
                                </th>
                                <th>

                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PO_ID)
                                    </td>
                                    <td>
                                        <a rel="tooltip" title="View Details" href="/po/details/@item.PO_ID">
                                            @item.PO_Number
                                        </a>

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Supplier)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td class="text-right">
                                        @item.PO_Detail.Sum(s => s.Qty * s.Unit_Price).ToString("C")
                                       @*@string.Format(new CultureInfo("hi-IN"), "{0:c}", item.PO_Detail.Sum(s => s.Qty * s.Unit_Price))*@
                                    </td>
                                    <td class="td-actions text-right">
                                        <a rel="tooltip" title="Edit Details" class="btn btn-primary btn-link btn-sm" href="/po/edit/@item.PO_ID">
                                            <i class="material-icons">edit</i>
                                        </a>
                                        <a rel="tooltip" title="Delete Record" class="btn btn-danger btn-link btn-sm" href="/po/delete/@item.PO_ID">
                                            <i class="material-icons">close</i>
                                        </a>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


