@model IEnumerable<MyInventory.Models.Item_Category>

@{
    ViewBag.Title = "Manage Categories";
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-icon" data-background-color="purple">
                <i class="material-icons">class</i>
            </div>          
            <div class="card-content">
                <h4 class="card-title">Category List</h4>
                <a href="/Category/create" class="navbar-right" style="margin-top:-40px;">
                    <i class="material-icons">add</i>
                    Add New Record
                </a>
                @*<div class="toolbar">

        </div>*@
                <div class="material-datatables">
                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                        <thead class="text-rose text-dark">
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    Category Name
                                </th>
                                <th class="disabled-sorting ">
                                    Aprroval Needed?
                                </th>
                                <th>
                                    Description
                                </th>
                                <th class="disabled-sorting text-right">Actions</th>
                            </tr>
                        </thead>
                        <tfoot class="text-rose text-dark">
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    Category Name
                                </th>
                                <th class="disabled-sorting ">
                                    Aprroval Needed?
                                </th>
                                <th>
                                    Description
                                </th>
                                <th class="text-right">Actions</th>
                            </tr>
                        </tfoot>
                        <tbody>

                            @foreach (var item in Model)
        {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category_ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cat_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Aprroval_Needed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="td-actions text-right">
                            <a rel="tooltip" title="Edit Record" href="/Category/edit/@item.Category_ID" class="btn btn-primary btn-simple btn-xs">
                                <i class="material-icons">edit</i>
                            </a>
                            <a href="/Category/delete/@item.Category_ID" rel="tooltip" title="Remove" class="btn btn-danger btn-simple btn-xs">
                                <i class="material-icons">close</i>
                            </a>
                        </td>
                    </tr>
}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
