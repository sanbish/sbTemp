@model MyInventory.Models.Item_Category

@{
    ViewBag.Title = "Manage Categories";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="card">
            <div class="card-header card-header-icon" data-background-color="purple">
                <i class="material-icons">class</i>
            </div>
            <div class="card-content">
                <h4 class="card-title">Delete Category</h4>
                <p class="card-category text-danger"> Are you sure you want to delete this category?</p>
                <div class="row">
                    <div class="col-md-12">
                        @Html.HiddenFor(model => model.Category_ID)
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Category ID</label>
                                    @Html.EditorFor(model => model.Category_ID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Category Name</label>
                                    @Html.EditorFor(model => model.Cat_Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Description</label>
                                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @using (Html.BeginForm())
    {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger pull-left"> <i class="material-icons">close</i>Delete</button>
}
                                    <a class="btn btn-primary pull-right" href="/category">
                                        <i class="material-icons">keyboard_backspace</i>
                                        Back to List
                                    </a>
                                </div>
                            </div>
                        </div>                        
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


