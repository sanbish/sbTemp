@model MyInventory.Models.Item_Category

@{
    ViewBag.Title = "Manage Categories";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="card ">
                <div class="card-header card-header-icon" data-background-color="purple">
                    <i class="material-icons">class</i>
                </div>
                <div class="card-content">
                    <h4 class="card-title">Edit Category</h4>
                    <div class="row">
                        <div class="col-md-12">
                            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                            @Html.HiddenFor(model => model.Category_ID)

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Category Name</label>
                                        @Html.EditorFor(model => model.Cat_Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Cat_Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Description</label>
                                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="checkbox">
                                        <label>
                                            @Html.EditorFor(model => model.Aprroval_Needed)
                                            @Html.ValidationMessageFor(model => model.Aprroval_Needed, "", new { @class = "text-danger" })
                                            2nd Aprroval Needed?
                                        </label>
                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary pull-left"> <i class="material-icons">done</i>Save</button>
                                        <a class="btn btn-primary pull-right" href="/category">
                                            <i class="material-icons">keyboard_backspace</i>
                                            Back to List
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
