@model IEnumerable<MyInventory.Models.Stock>

@{
    ViewBag.Title = "Manage Stocks";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-icon" data-background-color="purple">
                <i class="material-icons">grid_on</i>
            </div>
            <div class="card-content">
                <h4 class="card-title">Stock as on @DateTime.Now</h4>
                <a class="btn btn-primary navbar-right" href="/items" style="margin-top:-40px;">
                    <i class="material-icons">keyboard_backspace</i>
                    Back to Product List
                </a>
                @*<div class="toolbar">

        </div>*@
                <div class="material-datatables">
                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                        <thead class="text-rose text-dark">
                            <tr>
                                <th>
                                    Product Name
                                </th>
                                <th>
                                    Location
                                </th>
                                <th class="text-right">
                                    Qty
                                </th>
                                <th class="text-right">
                                    Price
                                </th>
                                <th class="text-right">
                                    Qty in WIP
                                </th>
                                <th>
                                    Warranty Expiry
                                </th>
                                <th>
                                    Product Expiry
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Item_Master.Item_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location.Location1)
                        </td>
                        <td class="text-right">
                            @String.Format("{0:N0}", item.Qty)
                        </td>
                        <td class="text-right">
                            @String.Format("{0:C}", item.Price)
                        </td>
                        <td class="text-right">
                            @String.Format("{0:N0}", item.WIP_Qty)
                        </td>
                        <td>
                            @String.Format("{0:dd/MM/yyyy}", item.Warranty_Expiry)

                        </td>
                        <td>
                            @String.Format("{0:dd/MM/yyyy}", item.Item_Expiry)
                        </td>
                        <td class="td-actions text-right">
                            <a rel="tooltip" title="Check Out Product" class="btn btn-primary btn-simple btn-xs" href="/stock/edit/@item.LineItem_ID">
                                <i class="material-icons">add_shopping_cart</i>
                            </a>
                            <a rel="tooltip" title="View Details" class="btn btn-primary btn-simple btn-xs" href="/stock/edit/@item.LineItem_ID">
                                <i class="material-icons">view_week</i>
                            </a>

                        </td>
                    </tr>
    }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
