@model IEnumerable<MyInventory.Models.ApplicationUser>
@{
    ViewBag.Title = "Manage Users";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-icon" data-background-color="purple">
                <i class="material-icons">person</i>
            </div>
            <div class="card-content">
                <h4 class="card-title">Users List</h4>
                <a href="/admin/create" class="navbar-right" style="margin-top:-40px;">
                    <i class="material-icons">add</i>
                    Add New Record
                </a>
                @*<div class="toolbar">

        </div>*@
                <div class="material-datatables">
                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                        <thead class="text-rose text-dark">
                            <tr>
                                <th>
                                    User Name
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Full Name
                                </th>
                                <th>
                                    Job Title
                                </th>
                                @*<th>
                    Roles
                </th>*@
                                <th>
                                    Location
                                </th>
                                <th class="disabled-sorting text-right">Actions</th>
                            </tr>
                        </thead>
                        <tfoot class="text-rose text-dark">
                            <tr>
                                <th>
                                    User Name
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Full Name
                                </th>
                                <th>
                                    Job Title
                                </th>
                                @*<th>
                    Roles
                </th>*@
                                <th>
                                    Location
                                </th>
                                <th class="text-right">Actions</th>
                            </tr>
                        </tfoot>
                        <tbody>

                            @foreach (var item in Model)
        {
                    <tr>
                        <td>                            
                                @item.UserName
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FriendlyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.JobTitle)
                        </td>
                        @*<td class="text-right">
            @foreach (var role in item.Roles)
            {
                Html.Display(role.RoleId.ToString() + ",");
            }
            @Html.DisplayFor(modelItem => item.Roles)
        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.LocationName)
                        </td>
                        <td class="td-actions text-right">
                            <a rel="tooltip" title="Edit Record" href="/admin/edit/@item.Id" class="btn btn-primary btn-simple btn-xs">
                                <i class="material-icons">edit</i>
                            </a>
                            @*<a href="/admin/delete/@item.Id" rel="tooltip" title="Remove" class="btn btn-danger btn-simple btn-xs">
                                <i class="material-icons">close</i>
                            </a>*@
                        </td>
                    </tr>
}

                        </tbody>
                    </table>
                </div>
            </div>
            </div>
        </div>
</div>
