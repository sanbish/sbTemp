@model IEnumerable<MyInventory.Models.ApplicationUser>
@{
    ViewBag.Title = "Manage Users";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-tabs card-header-primary">
                <div class="nav-tabs-navigation">
                    <div class="nav-tabs-wrapper">
                        <span class="nav-tabs-title"><b>Users List</b></span>
                        <ul class="nav nav-tabs justify-content-end" data-tabs="tabs">
                            <li class="nav-item">
                                <form class="navbar-form">
                                    <div class="input-group no-border">
                                        <input type="text" value="" style="color:white" class="form-control" placeholder="Search...">
                                        <button type="submit" class="btn btn-white btn-round btn-just-icon">
                                            <i class="material-icons">search</i>
                                            <div class="ripple-container"></div>
                                        </button>
                                    </div>
                                </form>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active show" href="/admin/create" style="margin-left:20px;">
                                    <i class="material-icons">add</i>
                                    Add New
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class=" text-primary Quote">
                            <tr>
                                <th>
                                    User Name
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Full Name
                                </th>
                                <th>
                                    Job Title
                                </th>
                                <th>
                                    Roles
                                </th>
                                <th>
                                    Location
                                </th>
                                <th>

                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a rel="tooltip" title="View Details" href="/admin/edit/@item.Id">
                                            @item.UserName
                                        </a>

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FriendlyName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.JobTitle)
                                    </td>
                                    <td class="text-right">
                                        @foreach (var role in item.Roles)
                                        {
                                            Html.Display(role.RoleId.ToString() + ",");
                                        }
                                        @Html.DisplayFor(modelItem => item.Roles)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Roles)
                                    </td>
                                    <td class="td-actions text-right">
                                        <a rel="tooltip" title="Edit Details" class="btn btn-primary btn-link btn-sm" href="/admin/edit/@item.Id">
                                            <i class="material-icons">edit</i>
                                        </a>

                                        <a rel="tooltip" title="Delete Record" class="btn btn-danger btn-link btn-sm" href="/admin/delete/@item.Id">
                                            <i class="material-icons">close</i>
                                        </a>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
