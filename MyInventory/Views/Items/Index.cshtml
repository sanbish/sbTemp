@model IEnumerable<MyInventory.Data.Item_Master>

@{
    ViewBag.Title = "Manage Products";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-tabs card-header-primary">
                <div class="nav-tabs-navigation">
                    <div class="nav-tabs-wrapper">
                        <span class="nav-tabs-title"><b>Product List</b></span>
                        <ul class="nav nav-tabs justify-content-end" data-tabs="tabs">
                            <li class="nav-item">
                                <form class="navbar-form">
                                    <div class="input-group no-border">
                                        <input type="text" value="" style="color:white" class="form-control" placeholder="Search..." >
                                        <button type="submit" class="btn btn-white btn-round btn-just-icon">
                                            <i class="material-icons">search</i>
                                            <div class="ripple-container"></div>
                                        </button>
                                    </div>
                                </form>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active show" href="/items/create" style="margin-left:20px;">
                                    <i class="material-icons">add</i>
                                    Add New
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-body">                           
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary Quote">
                                <tr>
                                    <th>
                                        ID
                                    </th>
                                    <th>
                                        Product Name
                                    </th>
                                    <th>
                                       Description
                                    </th>
                                    <th>
                                        Category
                                    </th>
                                    <th>
                                        Unit
                                    </th>
                                    <th class="text-right">
                                        Total Stock
                                    </th>
                                    <th>
                                        
                                    </th>
                                </tr>
                                </thead>
                            <tbody>

                                @foreach (var item in Model)
                    {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Item_ID)
                                    </td>
                                    <td>
                                        <a rel="tooltip" title="View Details"  href="/items/details/@item.Item_ID">
                                           @item.Item_Name
                                        </a>
                                       
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Item_Category.Cat_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UOM.Unit)
                                    </td>
                                    <td class="text-right">
                                        @String.Format("{0:N0}", item.Stocks.Sum(s => s.Qty))
                                    </td>
                                    <td class="td-actions text-right">
                                        <a rel="tooltip" title="Edit Details" class="btn btn-primary btn-link btn-sm" href="/items/edit/@item.Item_ID">
                                            <i class="material-icons">edit</i>
                                        </a>
                                        <a rel="tooltip" title="Stock Details" class="btn btn-primary btn-link btn-sm" href="/stock/Index/@item.Item_ID">
                                            <i class="material-icons">line_weight</i>
                                        </a>
                                        @*<a rel="tooltip" title="View Details" class="btn btn-primary btn-link btn-sm" href="/items/details/@item.Item_ID">
                                            <i class="material-icons">view_week</i>
                                        </a>*@
                                        <a rel="tooltip" title="Delete Record" class="btn btn-danger btn-link btn-sm" href="/items/delete/@item.Item_ID">
                                            <i class="material-icons">close</i>
                                        </a>

                                    </td>
                                </tr>
        }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
    </div>
</div>