@model IEnumerable<MyInventory.Models.Item_Master>

@{
    ViewBag.Title = "Manage Products";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-icon" data-background-color="purple">
                <i class="material-icons">apps</i>
            </div>
            <div class="card-content">
                <h4 class="card-title">Product List</h4>
                <a href="/items/create" class="navbar-right" style="margin-top:-40px;">
                    <i class="material-icons">add</i>
                    Add New Record
                </a>
                @*<div class="toolbar">
                    
                </div>*@
                <div class="material-datatables">
                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                        <thead class="text-rose text-dark">
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    Product Name
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Unit
                                </th>
                                <th class="text-right">
                                    Total Stock
                                </th>
                                <th class="disabled-sorting text-right">Actions</th>
                            </tr>
                        </thead>
                        <tfoot class="text-rose text-dark">
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    Product Name
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Unit
                                </th>
                                <th class="text-right">
                                    Total Stock
                                </th>
                                <th class="text-right">Actions</th>
                            </tr>
                        </tfoot>
                        <tbody>

                            @foreach (var item in Model)
        {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Item_ID)
                        </td>
                        <td>
                            <a rel="tooltip" title="View Details" href="/items/details/@item.Item_ID">
                                @item.Item_Name
                            </a>

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Item_Category.Cat_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UOM.Unit)
                        </td>
                        <td class="text-right">
                            @String.Format("{0:N0}", item.Stocks.Sum(s => s.Qty))
                        </td>
                        <td class="td-actions text-right">
                            <a rel="tooltip" title="Edit Record" href="/items/edit/@item.Item_ID" class="btn btn-primary btn-simple btn-xs">
                                <i class="material-icons">edit</i>
                            </a>
                            <a href="/items/delete/@item.Item_ID" rel="tooltip" title="Remove" class="btn btn-danger btn-simple btn-xs">
                                <i class="material-icons">close</i>
                            </a>
                        </td>
                    </tr>
}
                        </tbody>
                    </table>
                </div>
            </div> <!-- end content-->
        </div> <!--  end card  -->
    </div> <!-- end col-md-12 -->
</div> <!-- end row -->
