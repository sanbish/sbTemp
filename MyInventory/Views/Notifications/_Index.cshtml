@model IEnumerable<MyInventory.Data.Notification>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-warning">
                <h4 class="card-title">Notifications for @User.Identity.Name</h4>
                <p class="card-category">As on @DateTime.Now.ToString("dd, mmm yyyy")</p>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class=" text-warning">
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    Notification For
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Type
                                </th>
                                <th>
                                    Read?
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.Where(n=>n.Is_Read==false).Take(3))
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Notification_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Notification_To)
                                    </td>
                                    <td>
                                        <a rel="tooltip" title="View Details" href="/Notifications/details/@item.Notification_ID">
                                            @item.Notification1
                                        </a>

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Notification_Type)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Is_Read)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


