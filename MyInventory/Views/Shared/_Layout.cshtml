                            <span class="info text-info text-center" style="margin-left:15px;">TanInfo</span>
                        </div>

                    </div>
                    @if (Request.IsAuthenticated)
                    {
                        <ul class="nav">

                            @{ string cls = "";
                                string Route = Url.RouteUrl(ViewContext.RouteData.Values).ToLower();
                            }
                            @if (Route == "/")
                            {
                                cls = "class=active";
                            }
                            else
                            {
                                cls = "";
                            }
                            <li @cls>
                                <a href="/home">
                                    <i class="material-icons">dashboard</i>
                                    <p>Dashboard</p>
                                </a>
                            </li>
                            @if (Route.Contains("/category".ToLower()) == true)
                            {
                                cls = "class=active";
                            }
                            else
                            {
                                cls = "";
                            }
                            <li @cls>
                                <a href="/Category">
                                    <i class="material-icons">class</i>
                                    <p>Product Category</p>
                                </a>
                            </li>
                            @if (Route.Contains("/orders".ToLower()) == true)
                            {
                                cls = "class=active";
                            }
                            else
                            {
                                cls = "";
                            }
                            <li @cls>
                                <a href="/orders">
                                    <i class="material-icons">shopping_cart</i>
                                    <p>Orders</p>
                                </a>
                            </li>
                            @if (Route.Contains("/items".ToLower()) == true)
                            {
                                cls = "class=active";
                            }
                            else
                            {
                                cls = "";
                            }
                            <li @cls>
                                <a href="/Items">
                                    <i class="material-icons">apps</i>
                                    <p>Products</p>
                                </a>
                            </li>
                            @if (Route.Contains("/stock".ToLower()) == true)
                            {
                                cls = "class=active";
                            }
                            else
                            {
                                cls = "";
                            }
                            <li @cls>
                                <a href="/stock">
                                    <i class="material-icons">grid_on</i>
                                    <p>Stock</p>
                                </a>
                            </li>
                            @if (Route.Contains("/po".ToLower()) == true)
                            {
                                cls = "class=active";
                            }
                            else
                            {
                                cls = "";
                            }
                            <li @cls>
                                <a href="/po">
                                    <i class="material-icons">content_paste</i>
                                    <p>Purchasing</p>
                                </a>
                            </li>
                            @if (Route.Contains("/notifications".ToLower()) == true)
                            {
                                cls = "class=active";
                            }
                            else
                            {
                                cls = "";
                            }
                            <li @cls>
                                <a href="/notifications">
                                    <i class="material-icons">notifications</i>
                                    <p>Notifications</p>
                                </a>
                            </li>
                            @if (Route.Contains("/admin".ToLower()) == true)
                            {
                                cls = "class=active";
                            }
                            else
                            {
                                cls = "";
                            }
